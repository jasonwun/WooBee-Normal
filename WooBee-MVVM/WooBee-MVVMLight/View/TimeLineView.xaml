    <local:BindablePage.Resources>
        <DataTemplate x:Name="NormalTemplate"
                      x:DataType="model:Weibo">
            <Grid x:Name="NormalTemplateGrid"
                  Margin="0,15,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="325*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="45*"/>
                    <ColumnDefinition Width="313*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="AvartarImage"
                       Height="38"
                       Width="38"
                       Grid.Row="1"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Grid.ColumnSpan="2"
                       Source="{x:Bind User.AvatarLarge}"
                       Margin="4,2.667,1,0" 
                       Stretch="Fill"
                       d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>

                <StackPanel Background="Black"
                            Height="32"
                            Width="auto"
                            Grid.Column="2"
                            Grid.Row="1"
                            Margin="15,2.5,0,0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left" 
                            d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">

                    <TextBlock x:Name="textBlock7"
                               Margin="10,5,11,0"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               TextWrapping="Wrap"
                               Text="{x:Bind User.ScreenName}"
                               FontFamily="Microsoft YaHei"
                               FontSize="15"
                               Foreground="White" 
                               FontWeight="Bold"/>
                </StackPanel>

                <TextBlock x:Name="NormalTextblock"
                           Margin="15,38,0,0"
                           Grid.Column="2"
                           Grid.Row="1"
                           Text="{x:Bind Text}"
                           d:LayoutOverrides="TopMargin, BottomMargin, LeftPosition, RightPosition, TopPosition, BottomPosition" 
                           FontFamily="Microsoft YaHei UI"
                           IsTextSelectionEnabled="False" 
                           TextWrapping="Wrap"
                           FontSize="13"/>
            </Grid>
        </DataTemplate>
    </local:BindablePage.Resources>


