<Page
    x:Class="WooBee_Normal.PhotoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WooBee_Normal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="using:XamlAnimatedGif"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Disabled">

    <Grid Background="Black" Loaded="Grid_Loaded">
        <FlipView x:Name="ImagesFlip">

            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <ScrollViewer HorizontalScrollMode="Disabled" 
                                  VerticalScrollMode="Enabled">
                            <Image x:Name="photo" gif:AnimationBehavior.SourceUri="{Binding Image}" />

                        </ScrollViewer>
                        <!--<ProgressRing x:Name="progress" IsActive="{Binding IsLoading}"/>-->
                    </Grid>
                    
                    
                </DataTemplate>
            </FlipView.ItemTemplate>


        </FlipView>
    </Grid>
</Page>
