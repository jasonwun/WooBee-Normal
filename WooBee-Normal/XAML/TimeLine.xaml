<Page
    x:Class="WooBee_Normal.TimeLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WooBee_Normal"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Page.Resources>

        <DataTemplate x:Name="NormalTemplate">
            <Grid Grid.Column="1"
                  Grid.Row="1" 
                  d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"
                  Margin="0,17,0,17"
                  Name="NormalTemplateGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="14*"/>
                    <RowDefinition Height="325*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="313*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="AvartarImage"
                       Height="40"
                       Grid.Row="1"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Stretch" 
                       Grid.ColumnSpan="2"
                       Source="{Binding User.AvatarLarge}" 
                       Margin="6,2.667,1,0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>

                <Grid Background="Black"
                      Height="35"
                      Width="auto"
                      Grid.Column="2"
                      Grid.Row="1"
                      Margin="20,2.667,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">

                    <TextBlock x:Name="textBlock7"
                               Margin="10,8,20,0"
                               TextWrapping="Wrap"
                               Text="{Binding User.ScreenName}"
                               d:LayoutOverrides="TopPosition, BottomPosition"
                               FontFamily="Microsoft YaHei"
                               FontWeight="Bold"
                               Foreground="White"/>
                </Grid>

                <StackPanel Margin="0,2.667,0,0" 
                    Grid.Column="2" 
                            Height="20" 
                            Grid.Row="1" 
                            VerticalAlignment="Top" 
                            Width="auto"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" d:LayoutOverrides="TopMargin, BottomMargin">
                    <BitmapIcon UriSource="/Assets/Icons/Comment.png" 
                                Width="15"
                                Height="15"
                                Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding CommentsCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>
                    <BitmapIcon UriSource="/Assets/Icons/retweet-black.png"
                                Width="15"
                                Height="15"
                                Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding RepostsCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>
                    <BitmapIcon UriSource="/Assets/Icons/like.png"
                                Width="15"
                                Height="15"/>
                    <TextBlock Text="{Binding AttitudesCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>

                </StackPanel>


                <RichTextBlock x:Name="NormalTextblock"
                           Margin="20,49.667,0,0"
                           local:BindingHelper.Text="{Binding Text}"
                           Grid.Column="2"
                           Grid.Row="1"
                           d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, TopPosition, BottomPosition"
                           HorizontalAlignment="Left" 
                           FontFamily="Microsoft YaHei"
                           TextWrapping="WrapWholeWords"
                   Width="auto"
                               IsTextSelectionEnabled="False"/>
            </Grid>
        </DataTemplate>

