                  Grid.Row="1" 
                  Tapped="listView_Tapped" 
                  Grid.RowSpan="2"
                  Padding="0,20,0,0" Style="{StaticResource ListViewStyle1}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
