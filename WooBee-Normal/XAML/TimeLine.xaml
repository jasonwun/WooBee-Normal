                       Margin="4,3,0,0">
                </Image>
                <Grid Background="Black"
                      Height="35" 
                      Width="auto"
                      Grid.Column="2"
                      Grid.Row="1"
                      Margin="20,3,0,0" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Left">
                    <TextBlock x:Name="textBlock927"
                               Margin="10,8,20,0"
                               TextWrapping="Wrap"
                               Text="{Binding User.ScreenName}"
                               d:LayoutOverrides="TopPosition, BottomPosition"
                               FontFamily="Microsoft YaHei" 
                               FontWeight="Bold"
                               Foreground="White"/>
                </Grid>

                <StackPanel Margin="0,2.667,0,0" 
                    Grid.Column="2" 
                            Height="20" 
                            Grid.Row="1" 
                            VerticalAlignment="Top" 
                            Width="auto"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" d:LayoutOverrides="TopMargin, BottomMargin">
                    <BitmapIcon UriSource="/Assets/Icons/Comment.png" 
                                Width="15"
                                Height="15"
                                Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding CommentsCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>
                    <BitmapIcon UriSource="/Assets/Icons/retweet-black.png"
                                Width="15"
                                Height="15"
                                Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding RepostsCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>
                    <BitmapIcon UriSource="/Assets/Icons/like.png"
                                Width="15"
                                Height="15"/>
                    <TextBlock Text="{Binding AttitudesCount}" 
                               FontWeight="Bold" 
                               Margin="3,0,3,0"/>

                </StackPanel>

                <RichTextBlock x:Name="TextRepostContentTextBlock"
                           Margin="20,50,0,0"
                           local:BindingHelper.Text="{Binding Text}"
                           Grid.Column="2"
                           Grid.Row="1"
                           d:LayoutOverrides="LeftMargin, RightMargin, TopPosition, BottomPosition" 
                           FontFamily="Microsoft YaHei"
                              IsTextSelectionEnabled="False"          />

                <TextBlock x:Name="textBlock7"
                           TextWrapping="Wrap"
                           Grid.Column="2"
                           Grid.Row="2"
                           Margin="20,20,0,0" 
                           Text="{Binding RepostWeibo.User.ScreenName}"
                           d:LayoutOverrides="TopPosition, BottomPosition"
                           FontFamily="Microsoft YaHei" 
                           FontWeight="Bold"
                           Foreground="Black"/>


                <RichTextBlock x:Name="TextRepostTextBlock"
                           Margin="20,50,8,0"
                           local:BindingHelper.Text="{Binding RepostWeibo.Text}"
                           d:LayoutOverrides="LeftMargin, RightMargin, TopPosition, BottomPosition" 
                           Grid.Column="2"
                           Grid.Row="2"
                                IsTextSelectionEnabled="False"/>


            </Grid>
        </DataTemplate>

